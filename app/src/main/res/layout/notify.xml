<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<RelativeLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#121212"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/ly_ImgBg"
			android:layout_width="match_parent"
			android:layout_height="120dp"
			android:gravity="right"
			android:orientation="horizontal"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/iv_Album"
				android:focusable="false"
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:src="@drawable/app_logo"
				android:scaleType="centerCrop"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/ly_Info"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/ly_Info1"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="bottom"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/tv_SongName"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="2dp"
						android:text="Song Title"
						android:textSize="18sp"
						android:textColor="#FFFFFF"
						android:singleLine="true"/>
					<TextView
						android:id="@+id/tv_Artist"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="2dp"
						android:paddingRight="8dp"
						android:paddingBottom="8dp"
						android:text="Artist"
						android:textSize="14sp"
						android:textColor="#9E9E9E"
						android:singleLine="true"/>
					<LinearLayout
						android:id="@+id/ly_Controler"
						android:layout_width="match_parent"
						android:layout_height="52dp"
						android:padding="8dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview2"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/round_skip_previous_white_36dp"
							android:scaleType="center"/>
						<ImageView
							android:id="@+id/imageview3"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/round_play_arrow_white_36dp"
							android:scaleType="center"/>
						<ImageView
							android:id="@+id/imageview4"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/round_skip_next_white_36dp"
							android:scaleType="center"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/ly_TopLayerImg"
					android:layout_width="120dp"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:orientation="horizontal"
					android:background="@drawable/filtern"/>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
